# API Configuration
# Public API URL (accessible on client-side in Next.js)
# This is the base URL for your backend API
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Server-side API URL (optional, falls back to NEXT_PUBLIC_API_URL)
# Use this for server-side only API calls if different from public URL
# API_URL=http://localhost:3000/api

# Application Configuration
# Environment: development, staging, production
NEXT_PUBLIC_APP_ENV=development

# Application Name
NEXT_PUBLIC_APP_NAME=Trust Ledger

# API Timeout (optional, defaults to 30000ms in axios config)
# NEXT_PUBLIC_API_TIMEOUT=30000

# Feature Flags (if needed)
# NEXT_PUBLIC_FEATURE_FLAG_ENABLED=true
